<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center" >
                        {{user}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{register}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-sm" type="submit">
                        Eliminar
                        </button>
                    <a href="http://localhost:3000/tienda" class="btn btn-primary btn-lg">Tienda</a>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <p class="lead">No hay usuarios que realizar√°n compras.</p>
            <a href="/notes/add" class="btn btn-success btn-block ">Registrar a uno</a>
        </div>
    </div>    
    {{/each}}
</div>